<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TextView
            android:id="@+id/task_edit_name_label"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"
            android:text="@string/task_name"
            android:gravity="left"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <EditText
            android:id="@+id/task_edit_name_edit"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_marginTop="0dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android.layout_marginBottom="5dip"
            android:scrollHorizontally="true"
            android:autoText="false"
            android:capitalize="sentences"
            android:singleLine="true"
            android:gravity="fill_horizontal"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tag_spinners"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <Spinner
            android:id="@+id/tag_chooser"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_marginTop="5dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android.layout_marginBottom="5dip"/>
        <ImageButton android:id="@+id/add_tag_spinner"
         android:layout_width="wrap_content" android:layout_height="wrap_content"
         android:gravity="left" android:src="@android:drawable/btn_plus" />
    </LinearLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TextView
            android:id="@+id/tag_name_label"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"
            android:text="@string/new_tag"
            android:gravity="left"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <EditText
            android:id="@+id/new_tag_edit"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_marginTop="0dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android.layout_marginBottom="5dip"
            android:scrollHorizontally="true"
            android:autoText="false"
            android:singleLine="true"
            android:gravity="fill_horizontal"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <ImageButton android:id="@+id/add_tag"
         android:layout_width="wrap_content" android:layout_height="wrap_content"
         android:gravity="left" android:src="@android:drawable/btn_plus" />
            
    </LinearLayout>
</LinearLayout>